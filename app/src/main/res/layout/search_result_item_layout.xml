<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/medium_text"
        android:textColor="@color/colorBlack"
        android:id="@+id/errand_title"
        android:layout_marginTop="15dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:focusable="false"
        android:layout_marginLeft="15dp"
        android:clickable="false"
        android:layout_marginRight="15dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/errand_title"
        android:orientation="horizontal"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:id="@+id/container">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:clickable="false"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:textColor="@color/colorBlack"
        android:id="@+id/errand_distance"
        android:drawableLeft="@drawable/ic_distance"
        android:drawableStart="@drawable/ic_distance"
        android:gravity="center"
        android:layout_gravity="center"
        android:drawablePadding="4dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="7dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:clickable="false"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:textColor="@color/colorBlack"
        android:drawableLeft="@drawable/ic_pay"
        android:drawableStart="@drawable/ic_pay"
        android:gravity="center"
        android:layout_gravity="center"
        android:id="@+id/errand_pay"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="7dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:clickable="false"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:textColor="@color/colorBlack"
        android:id="@+id/errand_time"
        android:drawableLeft="@drawable/ic_time"
        android:drawableStart="@drawable/ic_time"
        android:drawablePadding="4dp"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="7dp"
        android:layout_marginEnd="7dp"
        android:gravity="center"
        android:layout_gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/container"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:weightSum="3">
    <Button
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="@string/details"
        android:id="@+id/details_button"
        android:clickable="true"
        android:focusable="false"
        android:minHeight="20dip"
        android:enabled="true"
        android:textColor="@color/textColorPrimary"
        android:background="@color/grayblue"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="7dp"
        android:layout_marginEnd="7dp"
        tools:ignore="ButtonStyle" />

    <Button
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="@string/location"
        android:id="@+id/location_button"
        android:clickable="true"
        android:focusable="false"
        android:minHeight="20dip"
        android:enabled="true"
        android:textColor="@color/textColorPrimary"
        android:background="@color/grayblue"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="7dp"
        android:layout_marginEnd="7dp"
        tools:ignore="ButtonStyle" />

     <Button
         android:layout_weight="1"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:textSize="12sp"
         android:text="@string/run"
         android:id="@+id/run_button"
         android:clickable="true"
         android:focusable="false"
         android:minHeight="20dip"
         android:enabled="true"
         android:textColor="@color/textColorPrimary"
         android:background="@color/grayblue"
         android:layout_marginBottom="10dp"
         android:layout_marginRight="15dp"
         android:layout_marginEnd="15dp"
         tools:ignore="ButtonStyle" />
    </LinearLayout>

</RelativeLayout>